<h1> Mantenimientos de Tablas</h1>
<div class="row">
@foreach(var items in Model.operaciones)
{
    <div class="card" style="width: 20rem; height: 12rem;margin-right: 2";>
        <div class="card-header" style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">@items.DescripcionOp</div>

        <a href="@items.Operacion_URL">
                <div class="card-body">
                    <h5 class="card-title">@items.comentario</h5>

                </div>
        </a>
    </div>
}
</div>